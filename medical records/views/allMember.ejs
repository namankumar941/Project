<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('./partials/head') %>
    <title>Home Page</title>
</head>
<body>
    <%- include('./partials/nav') %>

    <div class="mb-3">
        <a class="nav-link" href="/member/add">add member</a>        
     </div>

     <% if (locals.members[0]) { %>
        <% members.forEach(member => { %>
            <div class="col">
                <div class="card col" style="width: 18rem;">
                    <a class="nav-link " href="/documents/<%= member.memberId %>" role="button"  aria-expanded="false">
                        <img src="<%= member.profileImageURL %>" alt="Image" style="width: 50px; height: 50px;">
                      </a>
                      <p> <%= member.name %></p>                                          
                  </div>
                </div>
         
        <% }) %>     
     <% } %>

    <%- include('./partials/scripts') %>
</body>
</html>